<?xml version="1.0" encoding="utf-8"?>
<project name="kissy-gallery-build" default="build-packages" xmlns:ac="antlib:net.sf.antcontrib">
    <description>Gallery Build</description>

    <property name="charset" value="utf-8"/>
    <property name="gallery.dir" location="."/>
	<property name="gallery.build.dir" location="${gallery.dir}/../gallery-build/"/>
    <property name="tools.dir" location="${gallery.dir}/../kissy-tools/"/>

    <target name="build-all">
        <subant target="" failonerror="false" inheritall="false">
            <fileset dir="${gallery.dir}" includes="**/build.xml"/>
        </subant>
    </target>

    <target name="clean">
        <delete dir="${gallery.build.dir}"/>
    </target>

    <target name="build" depends="build-all,clean"> </target>

</project>
